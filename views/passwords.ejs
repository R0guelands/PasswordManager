<%- include('partials/header') %>
<div class="container text-center">
  <div class="container" style="margin-top:6%">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Your passwords</h1>
    <hr>

    <div class="container">
      <a title="Add password" class="btn btn-lg icon-container" href="/submit" role="button"><i class="bi bi-plus-circle-fill"></i><i class="bi bi-plus-circle"></i></a>

      <a title="Settings" class="btn btn-lg icon-container" href="/options" role="button"><i class="bi bi-gear-fill"></i><i class="bi bi-gear"></i></a>
  
      <a title="Log Out" class="btn btn-lg icon-container" href="/logout" role="button"><i class="bi bi-x-circle-fill"></i><i class="bi bi-x-circle"></i></a>
    </div>


    <div class="container" style="margin-top:3%">

      <input type="text" class="float-start input-addons" id="myInput" onkeyup="myFunction()" placeholder="Search for names.." >

      <table class="table table-striped table-sortable" id="myTable">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Username</th>
            <th scope="col">Password</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% for (var i = 0; i < entries.length; i++) { %>
            <tr>
              <th scope="row"><%= i + 1 %></th>
              <td><%= entries[i].name %></td>
              <td><%= entries[i].login %></td>
              <td id="pass"><%= entries[i].password %></td>
              <td>
                <a href="/edit/<%= entries[i].id %>" class="btn btn-dark btn-sm">Edit</a>
                <a href="/delete/<%= entries[i].id %>" class="btn btn-danger btn-sm">Delete</a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

  </div>
</div>

<script src="scripts/sort.js"></script>
<script src="scripts/decrypt.js"></script>

</body>
</html>
